@model PetShopWebBKB.Models.AdminUser

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    div{
        font-size:20px;
    }
    .form-group input{
        font-size:15px;
        width:250px;
        height:40px;
        border:none;
        border-radius:10px
    }
</style>
<div class="container-lg">
    <h3 style="font-size:40px;">Tạo mới tài khoản admin</h3>
    @{if (ViewBag.ErrorCreate != null)
        {
            <p style="color:red;">@ViewBag.ErrorCreate</p>
        }
    }
    @{if (ViewBag.ErrorUsername != null)
        {
            <p style="color:red;">@ViewBag.ErrorUsername</p>
        }
    }
    @{if (ViewBag.ErrorManager != null)
        {
            <p style="color:red;">@ViewBag.ErrorManager</p>
        }
    }
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="text" name="UserName" maxlength="10"/>@Html.ValidationMessageFor(model => model.UserName)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PasswordCus, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="password" name="PasswordCus" maxlength="10" />@Html.ValidationMessageFor(model => model.PasswordCus)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>