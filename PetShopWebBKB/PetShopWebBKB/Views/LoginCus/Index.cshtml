@model PetShopWebBKB.Models.Customer

@{
    ViewBag.Title = "LoginAccountCus";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<link href="~/Content/InforUserStyle.css" rel="stylesheet" />
<div style="background-color: none; font-family: 'Segoe UI'; margin-bottom:34px" class="container-lg">
    <div class="row">
        <div style="background-color: none; padding: 12px 22px; border-radius: 10px; align-items: center; justify-content: center; display: flex; font-family: Verdana; ">
            @using (Html.BeginForm("LoginAcountCus", "LoginCus"))
            {
                @Html.AntiForgeryToken()
                <div class="col-md-12">
                    <div style=" background-color: none; border-radius: 2px; padding: 12px 22px; border-radius: 20px; background-color: white">
                        <a style="text-decoration: none; user-select:none" href="/LoginCus/RegisterCusForm"><b style="color:burlywood; font-size:xx-large">&nbsp &nbsp Đăng Ký &nbsp</b></a>
                        <a style="text-decoration: none; user-select: none" href="/LoginCus/Index"><b style="color: burlywood; font-size: xx-large">Đăng Nhập</b></a>
                        <fieldset style="height: 90%; width: auto; padding: 12px 22px; border-radius: 5px">
                        <p style="font-size:large">Thông tin đăng nhập khách hàng</p>
                            <div style="border-bottom: 1px solid rgba(0,0,0,0.1);margin: 12px 12px;">
                                <p>Nhập tên đăng nhập: <input name="UserName" style="width: 100%; height: 40px; border-color: burlywood; margin: 12px 0px; border-radius: 10px" placeholder="Nhập tên đăng nhập..." type="text" />@Html.ValidationMessageFor(model => model.UserName)</p>
                                <p>
                                    Nhập mật khẩu: <input name="PasswordCus" style="width: 100%; height: 40px; border-color: burlywood; margin: 12px 0px; border-radius: 10px" placeholder="Nhập mật khẩu..." type="password" />@Html.ValidationMessageFor(model => model.PasswordCus)
                                    @if (ViewBag.ErrorInfo == null)
                                     {
                                        <p>@ViewBag.ErrorInfo</p>
                                     }
                                </p>        
                                <input class="btn" type="submit" value="Đăng Nhập" />
                            </div>
                        </fieldset>                       
                    </div>
                </div>              
            }
        </div>
    </div>
</div>

