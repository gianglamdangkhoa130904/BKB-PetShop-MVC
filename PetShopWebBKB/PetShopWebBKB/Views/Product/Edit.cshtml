@model PetShopWebBKB.Models.Product

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<style>
    p a {
        font-size: 30px;
        text-decoration: none;
        color: black;
    }
    div a {
        font-size: 30px;
        text-decoration: none;
        color: black;
    }
    .form-group{
        font-size:20px;
    }
    .form-group input{
        font-size:20px;
    }
</style>
<div class="container-lg">
    <h3 style="font-size:40px; text-align:center;">Edit</h3>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">
    @{ if (ViewBag.ErrorPrice != null)
        {
            <p style="color:red; font-size:20px;">@ViewBag.ErrorPrice</p>
        } }
    @if (ViewBag.ErrorAge != null)
    {
        <p style="color:red; font-size:20px;">@ViewBag.ErrorAge</p>
    }
    @if (ViewBag.ErrorEdit != null)
    {
        <p style="color:red; font-size:20px;">@ViewBag.ErrorEdit</p>
    }
    @if (ViewBag.ErrorRating != null)
    {
        <p style="color:red; font-size:20px;">@ViewBag.ErrorRating</p>
    }
    @if (ViewBag.ErrorQuantity != null)
    {
        <p style="color:red; font-size:20px;">@ViewBag.ErrorQuantity</p>
    }
    @if (ViewBag.ErrorNotEnough != null)
    {
        <p style="color:red; font-size:20px;">@ViewBag.ErrorNotEnough</p>
    }
    @if (ViewBag.ErrorImage != null)
    {
        <p style="color:red; font-size:20px;">@ViewBag.ErrorImage</p>
    }
    @if (ViewBag.ErrorName != null)
    {
        <p style="color:red; font-size:20px;">@ViewBag.ErrorName</p>
    }
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)

    <div class="form-group">
        @Html.LabelFor(model => model.IDPro, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.IDPro, (SelectList)ViewBag.listMenu, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IDFur, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.IDFur, (SelectList)ViewBag.listFur, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IDSize, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.IDSize, (SelectList)ViewBag.listSize, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IDOrigin, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.IDOrigin, (SelectList)ViewBag.listOrigin, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IDPopular, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.IDPopular, (SelectList)ViewBag.listPopular, new { htmlAttributes = new { @class = "form-control" } })

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NamePro, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.NamePro, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NamePro, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input name="Price" style="width: 100%; height: 40px; margin: 12px 0px;" placeholder="Nhập giá" max="1000000000" min="1" type="number" />@Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Rating, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input name="Rating" style="width: 100%; height: 40px;margin: 12px 0px;" max="5" min="1" placeholder="Nhập đánh giá" type="number" />@Html.ValidationMessageFor(model => model.Rating, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Age, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input name="Age" style="width: 100%; height: 40px;  margin: 12px 0px;" placeholder="Nhập tuổi" max="10" min="1" type="number" />@Html.ValidationMessageFor(model => model.Age, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SoldQuantity, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.SoldQuantity, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.RemainQuantity, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.RemainQuantity, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DescriptionPro, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DescriptionPro, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DescriptionPro, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ImagePro, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <img src="@Url.Content(Model.ImagePro)" height="150" width="150" id="preview" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
