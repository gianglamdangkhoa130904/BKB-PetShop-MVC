@model IEnumerable<PetShopWebBKB.Models.Product>

<script>
    function Cage(a, b, c, d) {
        document.getElementById(a).style.display = 'flex';
        document.getElementById(b).style.display = 'none';
        document.getElementById(c).style.display = 'none';
        document.getElementById(d).style.display = 'none';
    }
</script>
<style>
    #btn {
        font-size: 20px;
        font-weight: bold;
        width: 300px;
        height: 75px;
        background-color:white;
        border:none;
        margin-left: 20px;
        border-radius: 20px;
        border: 5px solid black;
        transition: 0.5s;
    }
        #btn:hover {
            color: chocolate;
            border: 5px solid chocolate;
            box-shadow: 0 10px 10px chocolate;
        }

    .item {
        border: solid black;
        border-width: 3px;
        border-radius: 10px;
        width: 230px;
        height: 400px;
        margin: 10px;
        box-shadow: 0px 5px 5px black;
        float: left;
    }
        .item:hover {
            border-width: 3px;
            border: solid chocolate;
            box-shadow: 0px 5px 5px chocolate;
        }
</style>
<div style="height: 75px; width: 100%; display: flex; align-items: center; justify-content:center;">
    <div><h3 style="font-size:40px;">Những giống chó đến từ </h3></div>
</div>
<div style="height:100px; width:100%;display:flex; align-items:center; " id="btns">
    <button id="btn" type="button" onclick="Cage('CageDog','CageCat','CageRabbit','CageHamster')" style="">Việt Nam</button>
    <button id="btn" type="button" onclick="Cage('CageCat','CageDog','CageRabbit','CageHamster')" style="">Nhật bản</button>
    <button id="btn" type="button" onclick="Cage('CageRabbit','CageDog','CageCat','CageHamster')" style="">Mĩ</button>
    <button id="btn" type="button" onclick="Cage('CageHamster','CageDog','CageCat','CageRabbit')" style="">Anh</button>
</div>
<div style="height:450px; width:100%; transition:0.5s;">
    <div id="CageDog" style="height:100%; display:flex; justify-content:center;align-items:center ">
        @{ int count = 0;}
        @foreach (var pro in Model)
        {
            if (pro.IDOrigin == "vn")
            {
                int? rate = pro.Rating;
                <div class="item">
                    <div style="height:50%; width:100%;"><a href="@Url.Action("Details","Product", new { id = pro.ID})"><img src="@Url.Content(pro.ImagePro)" style="height:100%;width:100%; border-radius: 10px;" /></a></div>
                    <div style="height:35%">
                        <h3 style=" text-align: center;">@Html.DisplayFor(model => pro.NamePro)</h3>
                        <p style="font-size:large; padding-left:10px;">Giá: @Html.DisplayFor(model => pro.Price)</p>
                        <div style="font-size:large; padding-left:10px;">
                            @for (int i = 1; i <= rate; i++)
                            {
                                <i class='bx bxs-star' style="color:yellow;"></i>
                            }
                            @for (int i = 1; i <= 5 - rate; i++)
                            {
                                <i class='bx bxs-star' style="color:gray;"></i>
                            }
                        </div>
                    </div>
                    <div style="height:15%"><h3 style="text-align:center"><a href="/ShoppingCart/AddToCart/@pro.ID" style="text-decoration: none; font-size: 30px; color:peru">Buy</a></h3></div>
                </div>
                count++;
            }
            if (count == 5)
            {
                break;
            }
        }
    </div>
